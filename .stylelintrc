{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "ignoreFiles": [
    "public/scss/includes/fonts/**",
    "public/scss/libs/**"
  ],
  "rules": {
    "selector-type-no-unknown": null,
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "no-descending-specificity": null,
  }
}
