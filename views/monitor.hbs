{{!< default }}
<main class="container monitor-homepage clear-header {{#if featuredBreach}} featured-breach {{/if}} {{#if featuredBreach.IsSensitive}} sensitive-landing {{/if}}" data-page-label={{> analytics/landing_page_label }}>
  <section class="row jst-cntr monitor-landing">
    <div class="col-12 flx-cntr landing-content">
      {{#makeLanding}}
          <h2 class="top-headline landing-headline">{{getString "take-control"}}</h2>
          <h3 class="subhead landing-subhead">{{getString "remove-home-cta-content" }}</h3>
      {{/makeLanding}}
          {{!-- {{#unless featuredBreach.IsSensitive}}
            {{> forms/scan-email-form }}
          {{/unless}} --}}
          <a class="remove-home__start-btn btn-blue-primary flx flx-cntr" data-event-category="Sign Up Button" href="/user/remove-enroll">
            {{getString "remove-home-removal-btn"}}</a>
          </a>
      {{#makeLanding}}
          {{#if info}}
            <section class="landing-sensitive-info">
              {{#each info}}
                <h3 class="sb-callout">{{ subhead }}</h3>
                <p class="sb-callout-body">{{ body }}</p>
              {{/each}}
            </section>
          {{/if}}
      {{/makeLanding}}
      </div>
    </section>

  {{#if featuredBreach}}
    {{#if featuredBreach.IsSensitive}}
    <div class="sb-top-container">
      <div class="row no-vertical-padding sb-top-wrapper">
        <div class="sb-top"><!--top of sign up call out--></div>
      </div>
    </div>
     {{/if}}
  {{else}}
    <div class="latest-breach-headline-wrapper">
      <h3 class="latest-breach-headline">{{{ getString "latest-breach" brandName="<span class='fxm'>Firefox Monitor</span>" }}}</h3>
    </div>
  {{/if}}
</main>
  {{#if featuredBreach.IsSensitive}}
    <section class="landing-bottom-bar sensitive-breach">
      {{> sign-up-banners/monitor-features variableClasses="sensitive-breach"}}
    </section>
  {{else}}
    {{#unless featuredBreach}}
      <section class="landing-bottom-bar">
        <div class="latest-breach-info">
          {{#each (lastAddedBreach)}}
            {{> breach-card cardType="latest-breach" latestBreach=true}}
          {{/each}}
        </div>
        <div class="remove-monitor-landing mw-860">
          {{#makeLanding}}
            <h2 class="headline article-list-headline txt-cntr">{{{ headline }}}</h2>
            <h3 class="article-list-subhead txt-cntr remove-monitor-subhead">{{ subhead }}</h3>
          {{/makeLanding}}
          {{#unless featuredBreach.IsSensitive}}
            {{> forms/scan-email-form }}
          {{/unless}}
          {{#makeLanding}}
              {{#if info}}
                <section class="landing-sensitive-info">
                  {{#each info}}
                    <h3 class="sb-callout">{{ subhead }}</h3>
                    <p class="sb-callout-body">{{ body }}</p>
                  {{/each}}
                </section>
              {{/if}}
          {{/makeLanding}}
        </div>
      {{> sign-up-banners/monitor-features }}
      </section>
    {{/unless}}
  {{/if}}

{{> linking-data/firefox-monitor-product }}
