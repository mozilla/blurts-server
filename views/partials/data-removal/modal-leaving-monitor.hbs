<div class="modal micromodal-slide" id="modal-leaving-monitor" aria-hidden="true">
  <div class="modal__overlay flx jst-cntr" tabindex="-1" data-micromodal-close>
    <div
      class="modal__container"
      role="dialog"
      aria-modal="true"
      aria-labelledby="modal-leaving-title"
    >
      <div class="flx space-between cntr modal__header">
        <h2 class="modal__title" id="modal-leaving-title">
          {{getRemoveString "remove-modal-leaving-title"}}
        </h2>
        <button
          class="modal__close"
          aria-label="Close modal"
          data-micromodal-close
        >
          <span class="sr-only">{{getRemoveString "remove-modal-close"}}</span>
        </button>
      </div>
      <div class="modal__content" id="modal-leaving-content">
        <p>
          {{getRemoveString "remove-modal-leaving-text"}}
        </p>
      </div>
      <div class="modal__footer flx space-between">
        <a
          class=""
          href="#"
          role="button"
          data-micromodal-close
          aria-label="{{getRemoveString "remove-modal-cancel"}}"
        >{{getRemoveString "remove-modal-cancel"}}</a>
        <a
          class="modal__leaving_link"
          href="#"
          target="_blank"
          rel="noopener noreferrer"
          data-event-category="Removal"
          data-ga-link
          data-event-label=""
        >{{getRemoveString "remove-modal-continue"}}</a>
      </div>
    </div>
  </div>
</div>