<div class="modal micromodal-slide" id="modal-remove-risk" aria-hidden="true">
  <div class="modal__overlay flx jst-cntr" tabindex="-1" data-micromodal-close>
    <div
      class="modal__container"
      role="dialog"
      aria-modal="true"
      aria-labelledby="modal-1-title"
    >
      <div class="flx space-between cntr modal__header">
        <h2 class="modal__title" id="modal-1-title">
          {{getRemoveString "remove-modal-risk-title"}}
        </h2>
        <button
          class="modal__close"
          aria-label="Close modal"
          data-micromodal-close
        ></button>
      </div>
      <div class="modal__content" id="modal-1-content">
        <p>{{getRemoveString "remove-about-risk-content"}}</p>
        <p>{{getRemoveString "remove-about-risk-high-content"}}</p>
        <p>{{getRemoveString "remove-about-risk-medium-content"}}</p>
        <p>{{getRemoveString "remove-about-risk-low-content"}}</p>
      </div>
      <div class="modal__footer flx space-between">
        <a href="/remove-faq#risk">{{getRemoveString "remove-modal-more-info"}}</a>
        <a
          class="modal__close-footer"
          href="#"
          role="button"
          data-micromodal-close
          aria-label="{{getRemoveString "remove-modal-close-accessible"}}"
        >{{getRemoveString "remove-modal-close"}}</a>
      </div>
    </div>
  </div>
</div>