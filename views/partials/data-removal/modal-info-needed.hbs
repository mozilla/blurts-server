<div class="modal micromodal-slide" id="modal-info-needed" aria-hidden="true">
  <div class="modal__overlay flx jst-cntr" tabindex="-1" data-micromodal-close>
    <div
      class="modal__container"
      role="dialog"
      aria-modal="true"
      aria-labelledby="modal-info-title"
    >
      <div class="flx space-between cntr modal__header">
        <h2 class="modal__title" id="modal-info-title">
          {{getRemoveString "remove-modal-info-title"}}
        </h2>
        <button
          class="modal__close"
          aria-label="Close modal"
          data-micromodal-close
        >
          <span class="sr-only">{{getRemoveString "remove-modal-close"}}</span>
        </button>
      </div>
      <div class="modal__content" id="modal-1-content">
        <p>
          {{getRemoveString "remove-modal-info-text"}}
        </p>
      </div>
      <div class="modal__footer flx space-between">
        <a
          href="https://www.thekanary.com/privacy_and_security"
          target="_blank"
          rel="noopener noreferrer"
        >{{getRemoveString "remove-modal-info-link"}}</a>
        <a
          class="modal__close-footer"
          href="#"
          role="button"
          data-micromodal-close
          aria-label="{{getRemoveString "remove-modal-close-accessible"}}"
        >{{getRemoveString "remove-modal-close"}}</a>
      </div>
    </div>
  </div>
</div>