<main class="landing-content" data-page-label={{>analytics/landing_page_label}}>
  <div class="section-wrapper">
    <div class="half {{#if featuredBreach}} featured {{/if}}">
      <h2 data-location="landing-page" class="section-headline">
        {{#if featuredBreach }}
          {{{fluentNestedBold "fb-landing-headline" breachName=featuredBreach.Title}}}
        {{else}}
          {{getString "landing-headline"}}
        {{/if}}
      </h2>
      {{#if featuredBreach }}
        {{#if featuredBreach.IsSensitive}}
          {{#if req.session.user}}
            {{> fxa_enabled/see_full_report_button}}
          {{else}}
            <button class="button sign-up-button" data-event-category="Sign Up To Check Button" {{>analytics/fxa id="fx-monitor-sign-in-to-check-button"}}>{{getString "sign-up-to-check"}}</button>
          {{/if}}
        {{else}}
          {{> scan_form}}
        {{/if}}
      {{else}}
        <p class="landing-blurb">
          {{getString "fxa-landing-blurb"}}
        </p>
      {{/if}}
    </div>
    <div class="half">
      {{#if featuredBreach}}
        {{> featured_breach}}
        {{> hibp_attribution additionalClasses="align-left"}}
      {{else}}
        <span class="demi form-desc">{{fluentFxa "scan-label"}}</span>
        {{> scan_form}}
      {{/if}}
    </div>
  </div>
</main>

