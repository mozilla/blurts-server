{
  "name": "@mozilla/monitor",
  "private": true,
  "description": "Firefox Monitor",
  "engines": {
    "node": "20.20.x",
    "npm": "10.1.x"
  },
  "type": "module",
  "scripts": {
    "dev": "npm run build-nimbus && next dev --turbo --port=6060",
    "dev:cron:breach-alerts": "tsx --tsconfig tsconfig.cronjobs.json src/scripts/cronjobs/emailBreachAlerts/index.ts",
    "dev:cron:db-delete-unverified-subscribers": "tsx --tsconfig tsconfig.cronjobs.json src/scripts/cronjobs/deleteUnverifiedSubscribers.ts",
    "dev:cron:db-pull-breaches": "tsx --tsconfig tsconfig.cronjobs.json src/scripts/cronjobs/syncBreaches.ts",
    "dev:cron:remote-settings-pull-breaches": "tsx --tsconfig tsconfig.cronjobs.json src/scripts/cronjobs/updateBreachesInRemoteSettings/index.ts",
    "dev:nimbus": "node --watch-path config/nimbus.yaml src/scripts/build/nimbusTypes.js",
    "build": "npm run build-glean && npm run build-nimbus && next build && npm run build-cronjobs",
    "cloudrun": "npm run db:migrate && npm start",
    "start": "next start",
    "lint": "stylelint '**/*.scss' && prettier --check './src' && eslint --max-warnings=0 . && next typegen && tsc -p tsconfig.json --noEmit && npm run validate-nimbus",
    "fix": "prettier --write './src' && eslint --fix . && stylelint --fix '**/*.scss'",
    "test": "npm run build-nimbus && jest \"\\.(spec|test)\\.ts\"",
    "test-integrations": "npm run build-nimbus && jest \"\\.integration\\.ts\" --coverage=false --runInBand",
    "functional-tests": "playwright test functional-tests/ --config=functional-tests/playwright.config.ts",
    "functional-tests:debug": "playwright test functional-tests/ --config=functional-tests/playwright.config.ts --ui",
    "cron:breach-alerts": "node dist/scripts/cronjobs/emailBreachAlerts/index.js",
    "cron:db-delete-unverified-subscribers": "node dist/scripts/cronjobs/deleteUnverifiedSubscribers.js",
    "cron:db-pull-breaches": "node dist/scripts/cronjobs/syncBreaches.js",
    "cron:remote-settings-pull-breaches": "node dist/scripts/cronjobs/updateBreachesInRemoteSettings/index.js",
    "db:migrate": "tsx node_modules/knex/bin/cli.js migrate:latest --knexfile src/db/knexfile.js",
    "db:rollback": "tsx node_modules/knex/bin/cli.js migrate:rollback --knexfile src/db/knexfile.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "npm run build-glean && npm run build-nimbus && storybook build",
    "build-cronjobs": "npm run build-nimbus && node esbuild.cronjobs.js",
    "build-nimbus": "node src/scripts/build/nimbusTypes.js",
    "build-frontend-glean": "glean translate src/telemetry/metrics.yaml --format typescript --output src/telemetry/generated && npm run build-glean-types",
    "build-backend-glean": "glean translate src/telemetry/backend-metrics.yaml --format typescript --output src/telemetry/generated/backend && npm run build-glean-types",
    "build-glean": "npm run build-frontend-glean && npm run build-backend-glean && npm run build-glean-types",
    "build-glean-types": "node src/scripts/build/gleanTypes.js",
    "build-glean-docs": "npm run build-glean-frontend-docs && npm run build-glean-backend-docs",
    "build-glean-frontend-docs": "glean translate src/telemetry/metrics.yaml --format markdown --output docs/telemetry/frontent",
    "build-glean-backend-docs": "glean translate src/telemetry/backend-metrics.yaml --format markdown --output docs/telemetry/backend",
    "loadtest:hibp-webhook": "echo 'Ensure k6 is installed; see:\n\thttps://grafana.com/docs/k6/latest/set-up/install-k6/\n' && K6_WEB_DASHBOARD=true K6_WEB_DASHBOARD_EXPORT=src/scripts/loadtest/reports/$(date +'%Y-%m-%d')-hibp-webhook-report.html k6 run --out json=src/scripts/loadtest/reports/$(date +'%Y-%m-%d')-hibp-webhook-results.json src/scripts/loadtest/hibp.js",
    "validate-nimbus": "sh src/scripts/build/validate-nimbus-file.sh",
    "prepare": "husky",
    "postinstall": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/blurts-server.git"
  },
  "homepage": "https://github.com/mozilla/blurts-server",
  "license": "MPL-2.0",
  "volta": {
    "node": "20.20.0",
    "npm": "10.1.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@aws-sdk/lib-storage": "^3.980.0",
    "@fluent/bundle": "^0.19.1",
    "@fluent/langneg": "^0.7.0",
    "@fluent/react": "^0.15.2",
    "@fluent/syntax": "^0.19.0",
    "@google-cloud/logging-winston": "^6.0.1",
    "@google-cloud/pubsub": "^5.2.2",
    "@grpc/grpc-js": "1.14.3",
    "@leeoniya/ufuzzy": "^1.0.19",
    "@mozilla/glean": "^5.0.7",
    "@next/env": "16.1.4",
    "@next/third-parties": "16.1.4",
    "@sentry/core": "^10.36.0",
    "@sentry/nextjs": "^10.36.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resource-detector-gcp": "^0.44.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@sentry/node": "^10.27.0",
    "@sentry/opentelemetry": "^10.34.0",
    "@stripe/stripe-js": "^8.5.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "canvas-confetti": "^1.9.4",
    "ioredis": "^5.9.2",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.3",
    "jwk-to-pem": "^2.0.7",
    "knex": "^3.1.0",
    "lodash.isequal": "^4.5.0",
    "mjml": "^4.18.0",
    "next": "16.1.5",
    "next-auth": "^4.24.13",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "raw-loader": "^4.0.2",
    "react": "19.2.3",
    "react-aria": "^3.45.0",
    "react-cookie": "^8.0.1",
    "react-dom": "19.2.3",
    "react-intersection-observer": "^10.0.0",
    "react-stately": "^3.43.0",
    "server-only": "^0.0.1",
    "sharp": "^0.34.5",
    "uuid": "^11.1.0",
    "winston": "^3.19.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/nextjs": "^10.1.11",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.0",
    "@types/adm-zip": "^0.5.7",
    "@types/canvas-confetti": "^1.9.0",
    "@types/eslint": "^9.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/k6": "^1.5.0",
    "@types/lodash.isequal": "^4.5.8",
    "@types/mjml": "^4.7.4",
    "@types/mjml-browser": "^4.15.0",
    "@types/nodemailer": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "adm-zip": "^0.5.16",
    "esbuild": "0.27.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.4",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-jsdoc": "^62.4.1",
    "eslint-plugin-storybook": "10.2.0",
    "fast-check": "^4.5.3",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "ioredis-mock": "^8.13.1",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.2.0",
    "jest-fail-on-console": "^3.3.4",
    "lint-staged": "^16.2.7",
    "mjml-browser": "^4.18.0",
    "patch-package": "^8.0.1",
    "prettier": "3.6.2",
    "sass": "^1.97.3",
    "storybook": "^10.1.11",
    "stylelint": "^17.0.0",
    "stylelint-config-recommended-scss": "^17.0.0",
    "stylelint-scss": "^7.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  }
}
