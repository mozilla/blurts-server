{
  "name": "monitor",
  "version": "1.0.0",
  "description": "Monitor V2",
  "type": "module",
  "engines": {
    "node": "18.12.x",
    "npm": "8.x"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "node esbuild & npm run copy:root & npm run copy:webp & npm run build:svg",
    "build:svg": "svgo -f ./client/images/ -o ../dist/images",
    "copy:webp": "rsync -d --include='*.webp' ./client/images/ ../dist/images/",
    "copy:root": "rsync -d ./client/ ../dist/",
    "convert:webp": "sh ./utils/webp.sh",
    "test": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js --runInBand --coverage ."
  },
  "nodemonConfig": {
    "watch": [
      "./*",
      "../.env",
      "../.env-dist",
      "../locales/en/*"
    ],
    "ext": "js,css,json,ftl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/blurts-server.git"
  },
  "homepage": "https://github.com/mozilla/blurts-server",
  "license": "MPL-2.0",
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleDirectories": [
      "../node_modules"
    ],
    "testEnvironment": "jest-environment-node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "dependencies": {
    "csrf-csrf": "^2.2.2",
    "esbuild": "^0.15.10",
    "helmet": "^6.0.0",
    "svgo": "^2.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "babel-jest": "^29.3.1",
    "jest": "^29.3.1",
    "redis-mock": "^0.56.3"
  }
}
