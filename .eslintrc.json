{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard",
        "plugin:jsdoc/recommended"
    ],
    "globals": {
        "gtag": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "header",
        "jsdoc"
    ],
    "rules": {
        "no-prototype-builtins": "warn",
        "no-undef": "warn",
        "camelcase": "warn",
        "new-cap": "warn",
        "header/header": [
            "warn",
            "block",
            " This Source Code Form is subject to the terms of the Mozilla Public\n * License, v. 2.0. If a copy of the MPL was not distributed with this\n * file, You can obtain one at http://mozilla.org/MPL/2.0/. ",
            2
        ],
        "jsdoc/require-jsdoc": "off",
        "jsdoc/require-param-description": "off",
        // Unused vars explicitly marked as such with an understore prefix are allowed:
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ]
    }
}
